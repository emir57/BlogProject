@model IEnumerable<BlogMvcApp.Models.Entities.Blog>

@{
    ViewBag.Title = "Index";
}

<div class="@(ViewBag.message==null?"":"alert alert-success")">@ViewBag.message</div>

<h2>Bloglar</h2>

<p>
    @Html.ActionLink("Yeni Blog Ekle", "Create",null,new {@class="btn btn-primary" })
</p>
<table class="table table-bordered table-hover table-striped">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsOk)
        </th>
        <th style="width:20px;">
            @Html.DisplayNameFor(model => model.IsHomePage)
        </th>
        <th style="width:230px;"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            ---
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Picture)
        </td>
        <td>
            ---
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddingDate)
        </td>
        <td>
            @if (item.IsOk)
            {
                <label class="badge bg-success">OK!</label>
            }
            else
            {
                <label class="badge bg-primary">Is Waiting!</label>
            }
            @*@Html.DisplayFor(modelItem => item.IsOk)*@
        </td>
        <td>
            @if (item.IsHomePage)
            {
                <label class="badge bg-success">Yes!</label>
            }
            else
            {
                <label class="badge bg-danger">No!</label>
            }
            @*@Html.DisplayFor(modelItem => item.IsHomePage)*@
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id },new {@class="btn btn-warning btn-sm m-1" })
            @Html.ActionLink("Details", "Details", new { id=item.Id },new {@class="btn btn-primary btn-sm m-1" })
            @Html.ActionLink("Delete", "Delete", new { id=item.Id },new {@class="btn btn-danger btn-sm m-1" })
        </td>
    </tr>
}

</table>
